<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="filght_complex.add_flight_complex"

    android:backgroundTint="#000000"
    android:backgroundTintMode="screen"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/th_m_chuy_n_bay__s__gh_"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="45dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white_B"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="60dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="22dp"
                    android:layout_height="29dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/back_arrow" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="180dp"
                    android:layout_height="46dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="55dp"
                    android:layout_weight="3"
                    android:drawableRight="@drawable/add_ring"
                    android:fontFamily="@font/montserrat_semibold"
                    android:gravity="center"
                    android:text="Thêm chuyến bay"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

            </LinearLayout>


            <EditText
                android:id="@+id/flight_id"
                android:layout_marginLeft="50dp"
                android:layout_width="277dp"
                android:layout_height="48dp"
                android:layout_marginTop="55dp"
                android:background="@drawable/simple_white_box"
                android:elevation="20dp"
                android:ems="10"
                android:fontFamily="@font/montserrat_semibold"
                android:hint="MÃ CHUYẾN BAY"
                android:inputType="textPersonName"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:padding="10dp"
                android:scrollIndicators="none"
                android:textSize="13sp" />


            <EditText
                android:id="@+id/number_of_business_chair"
                android:layout_width="277dp"
                android:layout_height="48dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="17dp"
                android:background="@drawable/simple_white_box"
                android:elevation="20dp"
                android:fontFamily="@font/montserrat_semibold"
                android:hint="SỐ GHẾ THƯƠNG GIA"
                android:padding="12dp"
                android:scaleType="center"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/cost_of_business_chair"
                android:layout_width="277dp"
                android:layout_height="48dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="23dp"
                android:background="@drawable/simple_white_box"
                android:elevation="20dp"
                android:padding="12dp"
                android:fontFamily="@font/montserrat_semibold"
                android:hint="GIÁ GHẾ THƯƠNG GIA"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/number_of_special_popular_char"
                android:layout_width="277dp"
                android:layout_height="48dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="23dp"
                android:background="@drawable/simple_white_box"
                android:elevation="20dp"
                android:padding="12dp"
                android:fontFamily="@font/montserrat_semibold"
                android:hint="SỐ GHẾ PHỔ THÔNG ĐẶC BIỆT"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/cost_of_special_popular_char"
                android:layout_width="277dp"
                android:layout_height="48dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/simple_white_box"
                android:elevation="20dp"
                android:padding="12dp"
                android:fontFamily="@font/montserrat_semibold"
                android:hint="GIÁ GHẾ PHỔ THÔNG ĐẶC BIỆT"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/number_of_popular_chair"
                android:layout_width="277dp"
                android:layout_height="48dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="19dp"
                android:background="@drawable/simple_white_box"
                android:elevation="20dp"
                android:padding="12dp"
                android:fontFamily="@font/montserrat_semibold"
                android:hint="SỐ GHẾ PHỔ THÔNG"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/cost_of_popular_char"
                android:layout_width="277dp"
                android:layout_height="48dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="19dp"
                android:background="@drawable/simple_white_box"
                android:elevation="20dp"
                android:padding="12dp"
                android:fontFamily="@font/montserrat_semibold"
                android:hint="GIÁ GHẾ PHỔ THÔNG"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/number_of_first_chair"
                android:layout_width="277dp"
                android:layout_height="48dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="23dp"
                android:background="@drawable/simple_white_box"
                android:elevation="20dp"
                android:padding="12dp"
                android:fontFamily="@font/montserrat_semibold"
                android:hint="SỐ GHẾ HẠNG NHẤT"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/cost_of_first_chair"
                android:layout_width="277dp"
                android:layout_height="48dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="23dp"
                android:background="@drawable/simple_white_box"
                android:elevation="20dp"
                android:padding="12dp"
                android:fontFamily="@font/montserrat_semibold"
                android:hint="GIÁ GHẾ HẠNG NHẤT"
                android:textSize="13sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/more_service"
                android:layout_width="277dp"
                android:layout_height="48dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="23dp"
                android:background="@drawable/box"
                android:contentDescription="Thời điểm xuất phát"
                android:hint="DỊCH VỤ THÊM"
                android:gravity="left"
                android:elevation="20dp"
                android:fontFamily="@font/montserrat_semibold"

                android:textSize="13sp" />

            <Button
                android:id="@+id/complete_add"
                android:layout_width="138dp"
                android:layout_height="48dp"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="44dp"
                android:backgroundTint="#3E6FEF"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Thêm " />
        </LinearLayout>
    </LinearLayout>
</ScrollView>