<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_ground"
    android:backgroundTintMode="screen"
    tools:context="forget_pass.create_pass.complete_create_pass"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/back"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/back_icon" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:width="235sp"
        android:height="55sp"
        android:fontFamily="@font/montserrat_extrabold"
        android:shadowColor="@color/black"
        android:text="Thành công"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="48sp"
        app:autoSizeTextType="uniform"
        app:lineHeight="55sp" />
    <TextView
        android:id="@+id/introduce_need_to_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_gravity="center"
        android:text="Mật khẩu đã được cập nhật"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="252dp"
        android:layout_height="252dp"
        android:layout_gravity="center"
        android:layout_marginTop="58dp"
        app:srcCompat="@mipmap/ic_launcher_foreground" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_login"
        android:layout_width="148sp"
        android:layout_height="48sp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_bg"
        android:backgroundTint="#3E6FEF"
        android:layout_gravity="center"
        android:fontFamily="@font/montserrat_bold"
        android:text="Đăng nhập"
        android:textColor="@color/white_B"
        />

    <TextView
        android:id="@+id/signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Hoặc, Đăng ký tài khoản mới"
        android:layout_gravity="center"
        android:textSize="16sp" />

    <View
        android:layout_width="210dp"
        android:layout_height="2dp"
        android:background="@android:color/black"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-light"
        android:text="Đăng nhập bằng"
        android:textSize="16sp" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="25dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="150dp"
            app:srcCompat="@drawable/icons8_google" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="150dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/icons8_facebook" />

    </LinearLayout>

</LinearLayout>