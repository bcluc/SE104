<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_ground"
    android:backgroundTintMode="screen"
    tools:context="login.login"
    android:orientation="vertical">

    <ImageView
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/back_icon" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:layout_marginLeft="50dp"
        android:width="235sp"
        android:height="55sp"
        android:fontFamily="@font/montserrat_extrabold"
        android:shadowColor="@color/black"
        android:text="Đăng nhập"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="48sp"
        app:autoSizeTextType="uniform"
        app:lineHeight="55sp" />
    <TextView
        android:layout_marginLeft="50dp"
        android:id="@+id/introduce_need_to_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="Đăng nhập để tiếp tục"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/username"
        android:layout_marginLeft="50dp"
        android:layout_width="271dp"
        android:layout_height="53dp"
        android:layout_marginTop="45dp"
        android:width="268sp"
        android:background="@drawable/btn_bg"
        android:drawableLeft="@drawable/mail_outline"
        android:ems="10"
        android:paddingLeft="20dp"
        android:fontFamily="@font/montserrat_semibold"
        android:hint=" User@gmail.com.vn"
        android:inputType="textEmailAddress"
        android:paddingStart="10sp" />


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/password"
        android:layout_width="269dp"
        android:layout_height="53dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="40dp"
        android:width="268sp"
        android:background="@drawable/btn_bg"
        android:drawableLeft="@drawable/lock"
        android:ems="10"
        android:fontFamily="@font/montserrat_semibold"
        android:hint=" Mật khẩu"
        android:inputType="textPassword"
        android:paddingStart="10sp"
        />


    <TextView
        android:id="@+id/forget_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Quên mật khẩu"
        android:textSize="12sp"
        android:layout_gravity="right"
        android:layout_marginRight="90dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_login"
        android:layout_width="148sp"
        android:layout_height="48sp"
        android:layout_marginTop="49dp"
        android:background="@drawable/btn_bg"
        android:backgroundTint="#3E6FEF"
        android:fontFamily="@font/montserrat_extrabold"
        android:text="Đăng nhập"
        android:layout_gravity="center"
        android:textColor="@color/white_B"/>

    <TextView
        android:id="@+id/signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Hoặc, Đăng ký tài khoản mới"
        android:layout_gravity="center"
        android:textSize="16sp" />

    <View
        android:layout_width="210dp"
        android:layout_height="2dp"
        android:background="@android:color/black"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-light"
        android:text="Đăng nhập bằng"
        android:textSize="16sp" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="25dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="150dp"
            app:srcCompat="@drawable/icons8_google" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="150dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/icons8_facebook" />

    </LinearLayout>


</LinearLayout>