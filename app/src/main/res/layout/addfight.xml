<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/th_m_chuy_n_bay__1_"
    android:backgroundTint="#000000"
    android:backgroundTintMode="screen"
    tools:context="flight_listview.add_flight"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/content_addflight"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="47dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textView4"
            app:layout_constraintHorizontal_bias="0.862"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.075"
            app:srcCompat="@drawable/back_arrow" />
        <TextView
            android:layout_weight="4"
            android:layout_marginTop="43dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="60dp"
            android:id="@+id/textView4"
            android:layout_width="289dp"
            android:layout_height="46dp"
            android:drawableRight="@drawable/add_ring"
            android:fontFamily="@font/montserrat_semibold"
            android:gravity="center"
            android:text="Thêm chuyến bay"
            android:textColor="@color/black"
            android:textSize="25sp"
            />

    </LinearLayout>



    <EditText
        android:id="@+id/flight_id"
        android:layout_width="277dp"
        android:layout_height="48dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/box_white"
        android:elevation="20dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:ems="10"
        android:fontFamily="@font/montserrat_semibold"
        android:hint="MÃ CHUYẾN BAY"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginLeft="50dp"
/>



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/hang_hang_ko"
        android:layout_width="277dp"
        android:layout_height="48dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/box"
        android:text="HÃNG HÀNG KHÔNG"
        android:contentDescription="Hãng hàng không"
        android:fontFamily="@font/montserrat_semibold"
        android:gravity="left"
        android:ems="10"
        android:textStyle="normal"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:padding="12dp"
        android:layout_marginLeft="50dp"
        android:scaleType="center"
        android:elevation="20dp"
/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/time_start"
        android:layout_width="277dp"
        android:layout_height="48dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/calenderbox"
        android:contentDescription="Điểm xuất phát"
        android:elevation="20dp"
        android:ems="10"
        android:fontFamily="@font/montserrat_semibold"
        android:gravity="left"
        android:textStyle="normal"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:padding="12dp"
        android:layout_marginLeft="50dp"
        android:text="Thời gian xuât phát"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/time_come"
        android:layout_width="277dp"
        android:layout_height="48dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/calenderbox"
        android:contentDescription="Điểm đến"
        android:elevation="20dp"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:fontFamily="@font/montserrat_semibold"
        android:gravity="left"
        android:ems="10"
        android:textStyle="normal"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:padding="12dp"
        android:layout_marginLeft="50dp"
        android:text="Thời gian đến dự kiến"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/start_locate"
        android:layout_width="277dp"
        android:layout_height="48dp"
        android:layout_marginTop="23dp"
        android:background="@drawable/box"
        android:contentDescription="Thời điểm xuất phát"
        android:elevation="20dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:fontFamily="@font/montserrat_semibold"
        android:gravity="left"
        android:ems="10"
        android:textStyle="normal"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:padding="12dp"
        android:layout_marginLeft="50dp"
        android:text="Điểm xuất phát"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/end_locate"
        android:layout_width="277dp"
        android:layout_height="48dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/box"
        android:contentDescription="Thời gian đến dự kiến"
        android:elevation="20dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:fontFamily="@font/montserrat_semibold"
        android:gravity="left"
        android:ems="10"
        android:textStyle="normal"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:padding="12dp"
        android:layout_marginLeft="50dp"
        android:text="Điểm đến"/>

    <Button
        android:id="@+id/next_page"
        android:layout_width="138dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#3E6FEF"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Tiếp tục "
        android:layout_marginLeft="220dp" />


</LinearLayout>