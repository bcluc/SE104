<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:backgroundTint="@color/main_blue"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <RelativeLayout
        android:id="@+id/ivNavUserRL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/loadingNavImage"
            android:lottie_rawRes="@raw/loading_ava"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="4dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivNavUser"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="4dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ava_sample" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/ivNavUserRL"
        android:gravity="center|start"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNavName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="Nguyễn Văn An"
            android:textColor="#fff"
            android:textSize="18sp" />

    </LinearLayout>
    <TextView
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:fontFamily="@font/montserrat_bold"
        android:id="@+id/tvNavEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="nvan2003@gmail.com"
        android:textColor="#fff"
        android:textSize="14sp" />

</RelativeLayout>
