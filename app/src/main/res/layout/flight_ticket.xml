<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/departure_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SGN"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/departure_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15:30"
            android:textColor="#8E8E8E"
            android:textSize="12sp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"/>


        <TextView
            android:id="@+id/flight_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2h10p"
            android:textColor="#8E8E8E"
            android:textSize="12sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="117dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chi tiết"
            android:textColor="#000000"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="40dp"/>

        <TextView
            android:id="@+id/destination_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HAN"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="230dp"/>

        <TextView
            android:id="@+id/destination_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17:40"
            android:textColor="#8E8E8E"
            android:textSize="12sp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="230dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Từ"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="290dp"/>

        <TextView
            android:id="@+id/ticket_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2,649,000 VND"
            android:textColor="#000000"
            android:textSize="12sp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="310dp"/>

        <TextView
            android:id="@+id/space_seat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Còn 9 chỗ"
            android:textColor="#000000"
            android:textSize="12sp"
            android:layout_marginLeft="334dp"
            android:layout_marginTop="50dp" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>