<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/head_frame" />

    <ImageView
        android:id="@+id/out_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/arrow"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="24dp" />

    <TextView
        android:id="@+id/lua_chon_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/Montserrat_Bold"
        android:text="Thanh toán"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="18dp" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/next_button"
        android:background="@drawable/next_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="576dp"  />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Đi tiếp"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="589dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/bank_card"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="88dp" />

    <EditText
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/card_background"
        android:ems="10"
        android:fontFamily="@font/Montserrat_Regular"
        android:inputType="textPersonName"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="190dp" />

    <EditText
        android:id="@+id/card_cvv"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:ems="4"
        android:inputType="number"
        android:background="@drawable/frame_payment_mini"
        tools:layout_editor_absoluteX="196dp"
        tools:layout_editor_absoluteY="367dp" />

    <TextView
        android:id="@+id/CVV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CVV"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="#000000"
        android:textSize="15sp"
        tools:layout_editor_absoluteX="196dp"
        tools:layout_editor_absoluteY="339dp" />

    <TextView
        android:id="@+id/EXP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EXP"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="#000000"
        android:textSize="15sp"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="339dp" />

    <TextView
        android:id="@+id/card_owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Card Owner"
        android:textColor="#000000"
        android:textSize="15sp"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="156dp" />

    <EditText
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/card_background"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="277dp" />

    <TextView
        android:id="@+id/card_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Card Number"
        android:textColor="#000000"
        android:textSize="15sp"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="244dp" />

    <EditText
        android:id="@+id/EXP_info"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:ems="5"
        android:background="@drawable/frame_payment_mini"
        android:inputType="textPostalAddress"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="367dp" />

</androidx.constraintlayout.widget.ConstraintLayout>