<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#182058"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:background="@drawable/splash_bg"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivUser"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/noavatar"
                    app:civ_border_color="@color/white"
                    app:civ_border_overlay="true"
                    app:civ_border_width="2dp"

                    />

                <ImageButton
                    android:id="@+id/ibUserImagePicker"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_below="@+id/ivUser"
                    android:layout_marginLeft="-29dp"
                    android:layout_marginTop="-41dp"
                    android:layout_marginBottom="2dp"
                    android:layout_toRightOf="@id/ivUser"
                    android:background="@android:color/transparent"
                    android:src="@mipmap/pickimage" />

            </RelativeLayout>



            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26.7dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="672.3dp"
                    android:layout_marginHorizontal="30.3dp"
                    android:layout_marginBottom="35dp"
                    android:background="@drawable/white_rounded_corner"
                    android:orientation="vertical"
                    android:paddingLeft="16dp">

                    <TextView
                        android:fontFamily="@font/montserrat_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="21.5dp"
                        android:gravity="center_horizontal"
                        android:text="Đăng ký"
                        android:textColor="#333232"
                        android:textSize="23.3sp" />

                    <TextView
                        android:fontFamily="@font/montserrat_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="27.3dp"
                        android:text="Họ và tên"
                        android:textColor="#9e9d9d"
                        android:textSize="12.3sp" />
                    <EditText
                        android:id="@+id/etSName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="17.3dp"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/montserrat_medium"
                        android:background="@android:color/transparent"
                        android:maxLines="1"
                        android:textColorHint="#c2c2c2"
                        android:textCursorDrawable="@drawable/grey_cursor_color"
                        android:textSize="15sp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="6.7dp"
                        android:layout_marginRight="17.3dp"
                        android:background="#9e9e9e" />

                    <TextView
                        android:fontFamily="@font/montserrat_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="27.3dp"
                        android:text="Email"
                        android:textColor="#9e9d9d"
                        android:textSize="12.3sp" />
                    <EditText
                        android:id="@+id/etSEmail"
                        android:layout_marginRight="17.3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/montserrat_medium"
                        android:background="@android:color/transparent"
                        android:maxLines="1"
                        android:textColorHint="#c2c2c2"
                        android:textCursorDrawable="@drawable/grey_cursor_color"
                        android:textSize="15sp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="6.7dp"
                        android:layout_marginRight="17.3dp"
                        android:background="#9e9e9e" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:text="Mật khẩu"
                        android:textColor="#9e9d9d"
                        android:fontFamily="@font/montserrat_medium"
                        android:textSize="12.3sp" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="17.3dp"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">


                        <EditText
                            android:id="@+id/etSPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:inputType="textPassword"
                            android:fontFamily="@font/montserrat_medium"
                            android:maxLength="10"
                            android:maxLines="1"
                            android:textColor="#333232"
                            android:textCursorDrawable="@drawable/grey_cursor_color" />




                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="6.7dp"
                        android:layout_marginRight="17.3dp"
                        android:layout_marginBottom="27dp"
                        android:background="#9e9e9e" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="27.3dp"
                        android:text="Số điện thoại"
                        android:fontFamily="@font/montserrat_medium"
                        android:textColor="#9e9d9d"
                        android:textSize="12.3sp" />
                    <EditText
                        android:id="@+id/etSPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="17.3dp"
                        android:layout_marginTop="12dp"
                        android:background="@android:color/transparent"
                        android:maxLines="1"
                        android:textColorHint="#c2c2c2"
                        android:fontFamily="@font/montserrat_medium"
                        android:textCursorDrawable="@drawable/grey_cursor_color"
                        android:textSize="15sp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="6.7dp"
                        android:layout_marginRight="17.3dp"
                        android:background="#9e9e9e" />

                    <TextView
                        android:fontFamily="@font/montserrat_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="27.3dp"
                        android:text="Địa chỉ"
                        android:textColor="#9e9d9d"
                        android:textSize="12.3sp" />
                    <EditText
                        android:id="@+id/etSAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="17.3dp"
                        android:layout_marginTop="12dp"
                        android:background="@android:color/transparent"
                        android:maxLines="1"
                        android:fontFamily="@font/montserrat_medium"
                        android:textColorHint="#c2c2c2"
                        android:textCursorDrawable="@drawable/grey_cursor_color"
                        android:textSize="15sp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="6.7dp"
                        android:layout_marginRight="17.3dp"
                        android:background="#9e9e9e" />

                    <TextView
                        android:fontFamily="@font/montserrat_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="27.3dp"
                        android:text="Thành phố"
                        android:textColor="#9e9d9d"
                        android:textSize="12.3sp" />
                    <TextView
                        android:id="@+id/tvSCity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="17.3dp"
                        android:layout_marginTop="12dp"
                        android:background="@android:color/transparent"
                        android:maxLines="1"
                        android:fontFamily="@font/montserrat_medium"
                        android:textColorHint="#c2c2c2"
                        android:textCursorDrawable="@drawable/grey_cursor_color"
                        android:textSize="15sp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="6.7dp"
                        android:layout_marginRight="17.3dp"
                        android:background="#9e9e9e" />


                </LinearLayout>

                <ImageView
                    android:id="@+id/btnSignUp"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:layout_gravity="bottom|right"
                    android:layout_marginRight="40dp"
                    android:src="@drawable/circle_arrow" />


            </FrameLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
