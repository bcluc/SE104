<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="511dp"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    android:paddingRight="10dp"
    android:background="@color/white_B">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <EditText
        android:id="@+id/input_locate"
        android:layout_width="275dp"
        android:layout_height="48dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/btn_bg"
        android:drawableRight="@drawable/icons8_search"
        android:fontFamily="@font/montserrat_semibold"
        android:hint="Nhập địa điểm"
        android:paddingLeft="15dp"
        android:paddingEnd="10dp"
        android:layout_gravity="center"
        android:textColorHint="@color/black_50" />

    <ImageView
        android:id="@+id/exit"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="30dp"
        android:layout_gravity="center"
        android:background="@drawable/vector__4_"
        />
    </LinearLayout>

    <Button
        android:id="@+id/continue_fill"
        android:layout_width="138dp"
        android:layout_height="48dp"
        android:layout_marginTop="350dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#3E6FEF"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Tiếp tục"
        android:layout_marginLeft="220dp" />

</LinearLayout>