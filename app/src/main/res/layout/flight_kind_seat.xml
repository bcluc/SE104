<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/check_seat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_head_bar"/>

        <TextView
            android:id="@+id/kind_seat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hạng phổ thông"
            android:textSize="13sp"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="#000000"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="90dp"/>

        <TextView
            android:id="@+id/seat_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="999,000 VND"
            android:textSize="12sp"
            android:fontFamily="@font/montserrat_semibold_italic"
            android:textColor="#000000"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="90dp"/>

        <RadioButton
            android:id="@+id/select_ticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="360dp" />

        <TextView
            android:id="@+id/space_seat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="330dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/montserrat_semibold_italic"
            android:text="Còn 9 chổ"
            android:textColor="#000000"
            android:textSize="12sp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>