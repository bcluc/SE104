<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
     >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/head_frame">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/out_arrow"
            android:layout_width="11.11dp"
            android:layout_height="18dp"
            android:background="@drawable/arrow"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/Montserrat_Bold"
            android:text="Thanh toán"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginLeft="120dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp">

        <RadioGroup
            android:id="@+id/payment_method"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="50dp">


            <RadioButton
                android:id="@+id/momo_wallet"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="75dp"
                android:background="@drawable/frame_payment"
                android:padding="20dp"
                android:fontFamily="@font/Montserrat_Regular"
                android:text="MOMO Wallet"
                android:textSize="12sp"
                android:drawableLeft="@drawable/MoMo_Logo"
                />

            <RadioButton
                android:id="@+id/cash_payment"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="75dp"
                android:checked="true"
                android:background="@drawable/frame_payment"
                android:padding="20dp"
                android:text="Cash Payment"
                android:textSize="12sp"
                android:fontFamily="@font/Montserrat_Regular"
                android:drawableLeft="@drawable/cash_payment"
                />

            <RadioButton
                android:id="@+id/online_banking"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="75dp"
                android:padding="20dp"
                android:background="@drawable/frame_payment"
                android:drawableLeft="@drawable/banking_method"
                android:text="Online Banking"
                android:textSize="12sp"
                android:fontFamily="@font/Montserrat_Regular" />
        </RadioGroup>



    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add new card"
        android:textSize="12sp"
        android:drawableLeft="@drawable/add_card"
        android:background="none"
        android:fontFamily="@font/Montserrat_Regular"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="300dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/next_button"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Đi tiếp"
        android:textColor="#FFFFFF"
        android:layout_gravity="center"
        android:layout_marginTop="300dp"/>


</FrameLayout>