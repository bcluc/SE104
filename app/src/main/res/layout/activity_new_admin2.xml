<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_admin2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        android:orientation="vertical"
        android:visibility="gone"

        >
        <Button
            android:id="@+id/button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/input_bg"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/baseline_arrow_back_ios_24"
            android:text="Phân quyền tài khoản"
            android:textAlignment="viewStart"
            android:textColor="#000000"
            app:backgroundTint="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.268"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/round_bg"
            android:backgroundTint="#80FFFFFF"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="30dp"
            android:paddingTop="30dp"

            android:layout_gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:shadowColor="@color/Input_color"
                android:shadowDx="10"
                android:shadowDy="10"
                android:shadowRadius="10"
                android:text="NHẬP tên tài khoản"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/text_ID"
                android:textColor="@color/black"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/search_bg"
                android:ems="10"
                android:hint="ID"
                android:inputType="text"
                android:padding="10dp"
                android:paddingLeft="10dp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:shadowColor="@color/Input_color"
                android:shadowDx="10"
                android:shadowDy="10"
                android:shadowRadius="10"
                android:text="NHẬP PASSWORD"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/text_pass"
                android:textColor="@color/black"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/search_bg"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:paddingLeft="10dp" />

            <Button
                android:id="@+id/button_next"
                android:layout_width="120dp"

                android:layout_height="50dp"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_bg"
                android:gravity="center"
                android:text="Next"
                app:backgroundTint="@null" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_admin3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        android:orientation="vertical"

        >
        <Button
            android:id="@+id/button_back_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/input_bg"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/baseline_arrow_back_ios_24"
            android:text="Phân quyền tài khoản"
            android:textAlignment="viewStart"
            android:textColor="#000000"
            app:backgroundTint="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.268"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/round_bg"
            android:backgroundTint="#80FFFFFF"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="30dp"
            android:layout_gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:shadowColor="@color/Input_color"
                android:shadowDx="10"
                android:shadowDy="10"
                android:shadowRadius="10"
                android:text="họ và tên"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/text_name"
                android:textColor="@color/black"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/search_bg"
                android:ems="10"
                android:hint="Nhập họ và tên"
                android:inputType="text"
                android:padding="10dp"
                android:paddingLeft="10dp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:shadowColor="@color/Input_color"
                android:shadowDx="10"
                android:shadowDy="10"
                android:shadowRadius="10"
                android:text="SĐT"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/text_phone"
                android:textColor="@color/black"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/search_bg"
                android:ems="10"
                android:hint="Nhập SĐT"
                android:inputType="phone"
                android:padding="10dp"
                android:paddingLeft="10dp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:shadowColor="@color/Input_color"
                android:shadowDx="10"
                android:shadowDy="10"
                android:shadowRadius="10"
                android:text="Email"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/text_email"
                android:textColor="@color/black"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/search_bg"
                android:ems="10"
                android:hint="Nhập Email"
                android:inputType="text"
                android:padding="10dp"
                android:paddingLeft="10dp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:shadowColor="@color/Input_color"
                android:shadowDx="10"
                android:shadowDy="10"
                android:shadowRadius="10"
                android:text="Hãng hàng không"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/text_Plane_ID"
                android:textColor="@color/black"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/search_bg"
                android:ems="10"
                android:hint="Plane_ID"
                android:inputType="text"
                android:padding="10dp"
                android:paddingLeft="10dp" />

            <Button
                android:id="@+id/bttn_done"
                android:layout_width="200dp"

                android:layout_height="50dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_bg"
                android:gravity="center"
                android:text="Tạo tài khoản"
                app:backgroundTint="@null" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>