<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/th_m_chuy_n_bay__s__gh_"
    android:orientation="vertical">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/baseline_arrow_back_ios_24"
        android:text="Quản lý hãng hàng không"
        android:textAlignment="viewStart"
        android:textColor="#000000"
        app:backgroundTint="@color/white"
        />


    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="84dp"
        android:background="@drawable/input_bg"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingTop="20dp"
        android:paddingRight="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.367"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/text_Plane_ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:text="Mã hãng hàng không:"

            android:textColor="@color/Input_color"
            android:textStyle="italic|bold" />

        <EditText
            android:id="@+id/text_Plane_ID_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_bg"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:hint="Nhập mã hãng hàng không" />

        <TextView
            android:id="@+id/text_Plane_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:text="Tên hãng hàng không:"
            android:textColor="@color/Input_color"
            android:textStyle="italic|bold" />

        <EditText
            android:id="@+id/text_Plane_Name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_bg"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:hint="Nhập tên hãng hàng không" />

        <TextView
            android:id="@+id/text_Plane_Phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:text="SĐT"
            android:textColor="@color/Input_color"
            android:textStyle="italic|bold" />

        <EditText
            android:id="@+id/text_Plane_Phone_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_bg"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:hint="Nhập SĐT"
            android:inputType="phone"/>

        <TextView
            android:id="@+id/text_Plane_Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:text="Email:"
            android:textColor="@color/Input_color"
            android:textStyle="italic|bold" />

        <EditText
            android:id="@+id/text_Plane_Email_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_bg"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:hint="Nhập Email"
            android:inputType="textEmailAddress"/>

        <Button
            android:id="@+id/bttn_done"
            android:layout_width="120dp"

            android:layout_height="50dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="30dp"
            app:backgroundTint="@null"
            android:background="@drawable/button_bg"
            android:text="chỉnh sửa" />

    </LinearLayout>

</LinearLayout>