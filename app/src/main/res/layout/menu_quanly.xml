<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/qu_n_l__chuy_n_bay__2_">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="45dp">
        <ImageView
            android:id="@+id/back"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back_arrow"
            />
        <TextView
            android:paddingLeft="20dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="Quản lý chuyến bay"
            android:fontFamily="@font/montserrat_semibold"

            />

    </LinearLayout>
    <TextView
        android:id="@+id/add_flight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:padding="20dp"
        android:textSize="15sp"
        android:text="Thêm chuyến bay"
        android:drawableRight="@drawable/add_ring"
        android:fontFamily="@font/montserrat_extrabold"

        />
    <TextView
        android:id="@+id/search_flight"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="Thêm chuyến bay"
        android:drawableRight="@drawable/eyes"
        android:fontFamily="@font/montserrat_extrabold"
        />


</LinearLayout>