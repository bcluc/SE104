<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_ground"
    android:backgroundTintMode="screen"
    android:orientation="vertical">

    <ImageView
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.118"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/back_icon" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="250dp"
        android:layout_height="83dp"
        android:layout_marginLeft="50dp"
        android:width="235sp"
        android:height="55sp"
        android:fontFamily="@font/montserrat_extrabold"
        android:shadowColor="@color/black"
        android:text="Đăng ký"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="48sp"
        app:autoSizeTextType="uniform"
        app:lineHeight="55sp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="271dp"
        android:layout_height="53dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/btn_bg"
        android:drawableLeft="@drawable/fingerprint"
        android:ems="10"
        android:padding="15dp"
        android:fontFamily="@font/montserrat_semibold"
        android:hint=" Tên người dùng"
        android:inputType="textPersonName" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editTextTextPersonName3"
        android:layout_width="269dp"
        android:layout_height="53dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_bg"
        android:layout_marginLeft="50dp"
        android:drawableLeft="@drawable/mail_outline"
        android:ems="10"
        android:fontFamily="@font/montserrat_semibold"
        android:hint=" User@gmail.com.vn"
        android:inputType="textEmailAddress"
        android:paddingLeft="15dp"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editTextTextPersonName4"
        android:layout_width="269dp"
        android:layout_height="53dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_bg"
        android:layout_marginLeft="50dp"
        android:drawableLeft="@drawable/vector__2_"
        android:ems="10"
        android:fontFamily="@font/montserrat_semibold"
        android:hint=" 099110022"
        android:inputType="phone"
        android:paddingLeft="15sp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editTextTextPersonName5"
        android:layout_width="269dp"
        android:layout_height="53dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/btn_bg"
        android:drawableLeft="@drawable/lock"
        android:ems="10"
        android:fontFamily="@font/montserrat_semibold"
        android:hint=" Mật khẩu"
        android:inputType="textPassword"
        android:paddingLeft="15dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editTextTextPersonName6"
        android:layout_width="269dp"
        android:layout_height="53dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:width="268sp"
        android:background="@drawable/btn_bg"
        android:drawableLeft="@drawable/lock"
        android:ems="10"
        android:fontFamily="@font/montserrat_semibold"
        android:hint="Xác nhận lại mật khẩu"
        android:inputType="textPassword"
        android:paddingLeft="15sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/appCompatButton"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@drawable/btn_bg"
        android:backgroundTint="#3E6FEF"
        android:fontFamily="@font/montserrat_extrabold"
        android:text="Đăng Ký"
        android:textColor="@color/white_B" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-light"
        android:text="Hoặc, Đăng nhập bằng"
        android:textSize="16sp"
        android:layout_gravity="center" />
    <View
        android:id="@+id/view3"
        android:layout_width="216dp"
        android:layout_height="2dp"
        android:background="@android:color/black"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="25dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="150dp"
            app:srcCompat="@drawable/icons8_google" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="150dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/icons8_facebook" />

    </LinearLayout>


</LinearLayout>